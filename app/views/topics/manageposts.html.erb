<div class="col-md-12">

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description  <div class="topic">
            <%= link_to("New topic", new_topic_path, class: "btn btn-primary pull-right") %>
          </div></td>
        
      </tr>
    </thead>
    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td>#</td>
          <td><%= link_to(topic.title, topic_path(topic)) %></td>
          <td><%= topic.description %></td>
          <!-- <td>
              <%= link_to("Edit", edit_topic_path(topic), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", topic_path(topic),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
